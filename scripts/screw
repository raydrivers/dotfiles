#!/bin/bash

RED='\033[0;31m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
DIM='\033[2m'
NC='\033[0m'

cat <<'ART'

    â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
    â•‘         ðŸ”©  S C R E W  ðŸ”©           â•‘
    â•‘                                      â•‘
    â•‘   âš   Homebrew is known to:          â•‘
    â•‘                                      â•‘
    â•‘   â€¢ Auto-update everything silently  â•‘
    â•‘   â€¢ Remove old versions behind       â•‘
    â•‘     your back                        â•‘
    â•‘   â€¢ Break working packages on        â•‘
    â•‘     upgrade                          â•‘
    â•‘   â€¢ Modify system state in ways      â•‘
    â•‘     that are hard to reproduce       â•‘
    â•‘                                      â•‘
    â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

ART

BREW_PATH="$(command -v brew 2>/dev/null)"
if [[ -z "$BREW_PATH" ]]; then
    echo -e "${RED}brew not found in PATH${NC}"
    exit 1
fi

BREW_INSTALL_PATH="$(command -v brew-install 2>/dev/null)"
if [[ -n "$BREW_INSTALL_PATH" ]]; then
    echo -e "${DIM}brew-install wrapper detected at ${BREW_INSTALL_PATH}${NC}"
    echo -e "${DIM}install commands will be routed through it${NC}"
else
    echo -e "${YELLOW}âš  brew-install wrapper not found${NC}"
    echo -e "${YELLOW}  brew will run without guardrails${NC}"
    echo -e "${DIM}  run dotfiles setup.sh to install it${NC}"
fi

echo ""
echo -e "${YELLOW}Command: ${CYAN}${BREW_PATH} $*${NC}"
echo ""
read -rp "$(echo -e "${RED}Proceed? [y/N]:${NC} ")" confirm

if [[ "$confirm" != [yY] ]]; then
    echo -e "${DIM}Wise choice.${NC}"
    exit 0
fi

if [[ -n "$BREW_INSTALL_PATH" && "$1" == "install" ]]; then
    shift
    echo -e "${DIM}Executing: ${BREW_INSTALL_PATH} $*${NC}"
    exec "$BREW_INSTALL_PATH" "$@"
fi

echo -e "${DIM}Executing: ${BREW_PATH} $*${NC}"
exec "$BREW_PATH" "$@"
